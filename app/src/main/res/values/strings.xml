    <!--###HELP###-->
    <string name="help">Help</string>
    <string name="help_overview_heading">Overview</string>
    <string name="help_overview">Privacy Friendly Password Generator deterministically generates passwords out of pre-chosen parameters and a master password. </string>
    <string name="help_parameters_heading">Explanation of parameters</string>
    <string name="help_parameters_domain_heading">Domain</string>
    <string name="help_parameters_domain_description">The domain is reference to the website or item the password is used for.</string>
    <string name="help_parameters_username_heading">Username</string>
    <string name="help_parameters_username_description">The optional username can be used to distinguish between different users for the same domain.</string>
    <string name="help_parameters_characterset_heading">Character set</string>
    <string name="help_parameters_characterset_description">The character set describes which types of characters should be included into the password. Websites often have recommendations regarding the character set of a password.</string>
    <string name="help_parameters_length_heading">Length</string>
    <string name="help_parameters_length_description">Length of the password.</string>
    <string name="help_parameters_iteration_heading">Iteration</string>
    <string name="help_parameters_iteration_description">Value that is required to generate different passwords with the same parameters in case of an update. The default value is 1. The iteration is incremented on every update.</string>
    <string name="help_manage_heading">Manage parameters</string>
    <string name="help_manage_add_heading">Add</string>
    <string name="help_manage_add_description">Add new parameters by pressing the plus button.</string>
    <string name="help_manage_delete_heading">Delete</string>
    <string name="help_manage_delete_description">Delete parameters by swiping to one side.</string>
    <string name="help_manage_update_heading">Update</string>
    <string name="help_manage_update_description">Update parameters by a long press on the list item.</string>

    <string name="help_generation_heading">Password generation</string>
    <string name="help_generation_description">The password is generated by the PBKDF2 algorithm. Domain, Username, Master password, device ID (optional) and iteration serve as seed for the hash algorithm.</string>

    <string name="help_privacy_heading">Privacy info</string>
    <string name="help_pin_storage_heading">Password storage</string>
    <string name="help_pin_storage_description">The password is always generated and not stored on the device.</string>
    <string name="help_permissions_heading">Permissions</string>
    <string name="help_permissions_description">Privacy Friendly Password Generator does not use any permissions</string>


