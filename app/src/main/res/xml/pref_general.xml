<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Password Settings">
        <SwitchPreference
            android:title="Bind passwords to device"
            android:id="@+id/pref_binding_switch"
            android:key="bindToDevice_enabled"
            android:summary="Create unique passwords per device."
            android:defaultValue="false"/>
        <SwitchPreference
            android:title="Copy passwords to clipboard"
            android:id="@+id/pref_clipboard_switch"
            android:key="clipboard_enabled"
            android:summary="Passwords will automatically copied after generation"
            android:defaultValue="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Metadata">
    </PreferenceCategory>

