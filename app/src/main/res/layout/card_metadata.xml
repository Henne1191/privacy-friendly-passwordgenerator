<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:elevation="3dp"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/domainTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOMAIN"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lengthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/domainTextView"
                android:text="LENGTH: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/domainTextView"
                android:layout_toEndOf="@+id/lengthTextView"/>

            <TextView
                android:id="@+id/iterationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lengthTextView"
                android:text="ITERATION:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/iteration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/lengthTextView"
                android:layout_toEndOf="@+id/iterationTextView"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/hasNumbersImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_drawer"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/hasSymbolsImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_drawer"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/hasLettersImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_drawer"
                    android:visibility="invisible"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>